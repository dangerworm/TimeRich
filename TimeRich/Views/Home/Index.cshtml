@{
    ViewBag.Title = "Home Page";
}

<h1 class="page-header">Task List</h1>
<h2 class="sub-header">All Tasks</h2>
<div class="table-responsive">
    <table class="table table-striped table-responsive table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Summary</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 1; i < 6; i++)
            {
                <tr>
                    <td>@i</td>
                    <td>Task #@i</td>
                    <td>Summary for task @i</td>
                    <td>
                        <button class="btn btn-success"><span class="glyphicon glyphicon-arrow-up"></span></button>
                        <button class="btn btn-danger"><span class="glyphicon glyphicon-arrow-down"></span></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>